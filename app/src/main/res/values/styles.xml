<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Default style -->
    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/menu_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for song name -->
    <style name="SongListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/listview_song_padding</item>
        <item name="android:paddingTop">@dimen/listview_vertical_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for artist name -->
    <style name="ArtistListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/listview_artist_padding</item>
        <item name="android:paddingTop">@dimen/listview_vertical_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

</resources>
